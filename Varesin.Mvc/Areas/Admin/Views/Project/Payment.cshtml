@using Varesin.Mvc.Models.Payment
@using Varesin.Mvc.Models.Project
@using Varesin.Mvc.Models
@using Varesin.Mvc.Models.Pagination
@using Microsoft.AspNetCore.Mvc.Rendering
@using Varesin.Domain.Enumeration
@using Varesin.Mvc.Services
@using DNTPersianUtils.Core

@model List<PaymentViewModel>
@{
    ViewData["Title"] = "مشاهده پرداخت های پروژه - پنل مدیریتی وارثین";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var project = (Varesin.Mvc.Models.Project.ProjectViewModel)ViewBag.Project;

}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Project">مشاهده پروژه های سامانه</a></li>
        <li class="breadcrumb-item active" aria-current="page">مشاهده پرداخت های پروژه</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">مشاهده پرداخت های پروژه</div>
    <div class="panel-body">
        <div class="row flex-end">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div>
                    <label for="pwd">عنوان پروژه : <span class="label label-info">@(project?.Title)</span></label>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div>
                    <label for="pwd">نوع پروژه : <span class="label label-success">@(project.Type?.Title)</span></label>
                </div>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>مبلغ پرداختی</th>
                        <th>وضعیت پرداخت</th>
                        <th>زمان درخواست</th>
                        <th>شماره همراه پرداخت کننده</th>
                        <th>نام و نام خانوادگی پرداخت کننده</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Price.ToString("#,##").ToPersianNumbers() تومان</td>
                            <td>
                                @if (item.IsSuccess)
                                {
                                    <label class="label label-success">پرداخت شده</label>
                                }
                                else
                                {
                                    <label class="label label-warning">پرداخت نشده</label>
                                }
                            </td>
                            <td>
                                @item.CreateDate.ToLongPersianDateTimeString().ToPersianNumbers()
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.PhoneNumber))
                                {
                                    <label>---</label>
                                }
                                else
                                {
                                    <label>@item.PhoneNumber.ToPersianNumbers()</label>
                                }
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.FullName))
                                {
                                    <label>---</label>
                                }
                                else
                                {
                                    <label>@item.FullName.ToPersianNumbers()</label>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


