@using Varesin.Mvc.Models.User
@using Varesin.Mvc.Models.WorkingGroup
@using Varesin.Mvc.Models.Pagination
@using Microsoft.AspNetCore.Mvc.Rendering
@using Varesin.Domain.Enumeration
@using Varesin.Mvc.Services

@model List<WorkingGroupViewModel>
@{
    ViewData["Title"] = "مشاهده کارگروه های سامانه - پنل مدیریتی وارثین";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item active" aria-current="page">مشاهده کارگروه های سامانه</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">مشاهده کارگروه های سامانه</div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>عنوان کارگروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                @if (UserAccessService.UserIsInRole(User, AccessCode.EditWorkingGroup))
                                {
                                    <a asp-action="Edit" asp-controller="WorkingGroup" asp-area="Admin" asp-route-id="@(item.Id)" class="btn btn-success">ویرایش</a>
                                }
                                @if (UserAccessService.UserIsInRole(User, AccessCode.DeleteWorkingGroup))
                                {
                                    <a data-role="confirm" asp-action="Delete" asp-controller="WorkingGroup" asp-area="Admin" asp-route-id="@(item.Id)" class="btn btn-danger">حذف</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


