@using Varesin.Mvc.Models.Member
@using Varesin.Mvc.Models
@using Varesin.Mvc.Models.Pagination
@using Microsoft.AspNetCore.Mvc.Rendering
@using Varesin.Domain.Enumeration
@using DNTPersianUtils.Core
@using Varesin.Mvc.Services

@model List<MemberViewModel>
@{
    ViewData["Title"] = "کارتابل گزینشگر - پنل مدیریتی وارثین";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";


}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item active" aria-current="page">کارتابل گزینشگر</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">کارتابل گزینشگر</div>
    <div class="panel-body">

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>نام و نام خانوادگی</th>
                        <th>شماره همراه</th>
                        <th>رشته تحصیلی</th>
                        <th>وضعیت</th>
                        <th>تاریخ درخواست</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count==0)
                    {
                        <tr>
                            <td colspan="6">داده ای وجود ندارد</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName?.ToPersianNumbers()</td>
                                <td>@item.PhoneNumber?.ToPersianNumbers()</td>
                                <td>
                                    @item.Field?.ToPersianNumbers()
                                </td>
                                <td>
                                    @if (item.Status == MemberStatus.Rejected)
                                    {
                                        <label class="label label-danger">رد شده</label>
                                    }
                                    else if (item.Status == MemberStatus.InterViewing)
                                    {
                                        <label class="label label-warning">در حال انتظار</label>
                                    }
                                    else
                                    {
                                        <label class="label label-success">تایید شده</label>
                                    }
                                </td>
                                <td>
                                    @item.CreateDate.ToPersianDateTextify()
                                </td>
                                <td>
                                    
                                        <a asp-action="CheckInterviewer" asp-area="Admin" asp-controller="Member" asp-route-id="@(item.Id)" class="btn btn-success">مشاهده و بررسی</a>
                                    

                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


