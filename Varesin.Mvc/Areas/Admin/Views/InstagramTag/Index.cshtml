
@using Varesin.Mvc.Models
@using Varesin.Mvc.Models.Pagination
@using Microsoft.AspNetCore.Mvc.Rendering
@using Varesin.Domain.Enumeration
@using Varesin.Mvc.Services
@using DNTPersianUtils.Core

@model List<Varesin.Mvc.Models.Instagram.InstagramTagViewModel>
@{
    ViewData["Title"] = "مشاهده تگ های اینستاگرام  سامانه - پنل مدیریتی وصی - پایگاه اطلاع رسانی مسجد امیرالمومنین (علیه السلام)";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item active" aria-current="page">مشاهده تگ های اینستاگرام  سامانه</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">مشاهده تگ های اینستاگرام  سامانه</div>
    <div class="panel-body">
        <form method="post">
            <div class="row flex-end">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="required" for="pwd">آیدی : </label>
                        <input required name="name" type="text" placeholder="آیدی" class="form-control" id="pwd">
                    </div>
                </div>



                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <button type="submit" class="ladda-button btn btn-primary btn-block" data-style="zoom-in">
                            <span class="ladda-label">ایجاد</span>
                        </button>
                    </div>
                </div>

            </div>
        </form>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> آیدی</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name?.ToPersianNumbers()</td>
                            <td>

                                <a data-role="confirm" asp-action="Delete" asp-controller="InstagramTag" asp-area="Admin" asp-route-id="@(item.Id)" class="btn btn-danger">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


